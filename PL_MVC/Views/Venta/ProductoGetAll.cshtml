@model ML.Producto
<link rel="stylesheet" href="~/Content/bootstrap.css">
@{
    ViewBag.Title = "ProductoGetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>ProductoGetAll</h2>

<div class="container">
    @foreach (ML.Producto producto in Model.Productos)
    {
        <div class="col-md-4">
            <div class="col-md-8">
                <div class="col-sm-4">
                    <div class="thumbnail">
                        <div class="caption text-center">
                            <div class="position-relative">
                                @if (producto.Imagen != null)
                                {
                                    <img id="prevImage" src="data:image/jpeg;base64,@Convert.ToBase64String(producto.Imagen)" width="100" height="100" />
                                }
                                else
                                {
                                    <img src="~/Content/sinImagen.jpg" style=" height:100px; width:100px;" />
                                }
                            </div>
                            <h4 id="thumbnail-label">@producto.Nombre</h4>
                            <h5 id="thumbnail-label">$@producto.Precio</h5>
                            <div class="thumbnail-description smaller">@producto.Descripcion</div>
                        </div>
                        <div class="caption card-footer text-center">
                            <ul class="list-inline">
                                @*<li><a class="btn btn-primary-getAll carrito-res" href="@Url.Action("CarritoAdd", "Venta", new { IdProducto = producto.IdProducto })">Agregar al carrito 🛒</a></li>*@       
                                <li><a class="btn btn-primary-getAll carrito-res" href="@Url.Action("CarritoAdd", "Venta", new { IdProducto = producto.IdProducto })"><span class="texto_responsive" data-text-max="Agregar al carrito 🛒" data-text-min="🛒"></span></a></li>                                   
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

</div>
