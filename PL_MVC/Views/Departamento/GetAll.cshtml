@model ML.Departamento
@{
    ViewBag.Title = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/bootstrap.css" rel="stylesheet" />

<h2>Departamento</h2>

<div class="container">
    <div class="row">
        <div style="float:right; margin-bottom:1rem;">
            @Html.ActionLink("+", "Form", "Departamento", htmlAttributes: new { @class = "btn btn-success" })
        </div>

        <table class="table table-bordered table-responsive">
            <thead>
                <tr>
                    <td class="text-center">Editar</td>
                    <td class="hidden">IdDepartamento</td>
                    <td class="text-center">Nombre</td>
                    <td class="hidden">IdArea</td>
                    <td class="text-center">Area</td>
                    <td class="text-center">Eliminar</td>
                </tr>
            </thead>
            <tbody>
                @foreach (ML.Departamento departamento in Model.Departamentos)
                {
                    <tr>
                        <td class="text-center"><a class="btn btn-warning glyphicon glyphicon-edit" href="@Url.Action("Form", "Departamento", new { IdDepartamento = departamento.IdDepartamento })"></a></td>
                        <td class="hidden">@departamento.IdDepartamento</td>
                        <td class="text-center">@departamento.Nombre</td>
                        <td class="hidden">@departamento.Area.IdArea</td>
                        <td class="text-center">@departamento.Area.Nombre</td>
                        <td class="text-center"><a class="btn btn-danger glyphicon glyphicon-trash" href="@Url.Action("Delete", "Departamento", new { IdDepartamento= departamento.IdDepartamento})" onclick="return confirm('Estas seguro que deseas eliminar este registro?');"></a></td>
                    </tr>
                }
            </tbody>
        </table>       
    </div>
</div>

